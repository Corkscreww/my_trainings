  {
    "configurations": {
      "Run current file": {
        "adapter": "debugpy",
        "configuration": {
          "type": "python",
          "request": "launch",
          "cwd": "${workspaceRoot}",
          "stopOnEntry": true,
          "console": "integratedTerminal",
          "program": "${file}"
        },
        "breakpoints": {
          "exception": {
            "raised": "",
            "uncaught": "Y",
            "userUnhadled": "N"
          }
        }
      }
    }
  }
